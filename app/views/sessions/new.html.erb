
  <section class="header-11-sub">
      <div class="background">&nbsp;</div>
      <div class="container">
          <div class="row">
              <div class="col-sm-4">
                  <div class="signup-form">
                    <%= form_for @user || User.new, url: sessions_path, method: 'post' do |f| %>
                      <div class="form-group">
                        <%= f.text_field 'email', class: 'form-control', placeholder: 'Your E-mail' %>
                      </div>
                       
                      <div class="form-group">
                        <div>
                          <%= f.password_field 'password', class: 'form-control', placeholder: 'Password' %>
                        </div>
                        
                      </div>
                      
                      <% if @user && @user.errors.any? %>
                        <div class="alert alert-danger" role="alert">
                          <ul>
                            <% @user.errors.full_messages.each do |err| %>
                              <li>
                                <strong><%= err %></strong>
                              </li>
                            <% end %>
                          </ul>
                        </div>
                      <% end %>

                      <div class="form-group">
                          <%= f.submit 'Sign In', class: 'btn btn-block btn-info' %>
                      </div>    
                    <% end %>
                  </div>
              </div>
              <div class="col-sm-7 col-sm-offset-1 player-wrapper">
                  <div class="player">
                      <%= image_tag 'hero' %>
                  </div>
              </div>
          </div>
      </div>
  </section>

